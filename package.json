{
  "name": "elta-shipping-label-generator",
  "version": "1.0.0",
  "description": "Generate Elta Shipping Vouchers",
  "main": "main.js",
  "scripts": {
    "start": "node app.js",
    "start:react": "cd frontend && npm run dev",
    "start:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm run start:react\" \"npm run start:electron\"",
    "build": "cd frontend && npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "puppeteer": "^23.3.1",
    "react-router-dom": "^7.4.1",
    "unidecode": "^1.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourdomain.orderprocessor",
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      "orders.csv"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  }
}
